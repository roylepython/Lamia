@api "/api/lamia/compile"
manifest compile_lamia_code(code: string) -> json {
    result = lamia_compiler.compile(code)
    return {
        "success": result.success,
        "output": result.output,
        "errors": result.errors,
        "performance_score": result.performance_score
    }
}

@api "/api/manufacturing/gcode"
manifest generate_gcode(design: object) -> json {
    gcode = bambu_bridge.generate_gcode(design)
    return {
        "gcode": gcode.commands,
        "estimated_time": gcode.estimated_time,
        "material_usage": gcode.material_usage,
        "quality_score": gcode.quality_score
    }
