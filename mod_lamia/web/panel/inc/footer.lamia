<div class="universal-footer">
    <div class="universal-footer-content">
        <div class="copyright-gif3d">
            <div class="copyright-symbol">
                <div class="copyright-ring"></div>
                <div class="copyright-core"></div>
                <div class="copyright-particles">
                    <div class="particle"></div>
                    <div class="particle"></div>
                    <div class="particle"></div>
                    <div class="particle"></div>
                </div>
            </div>
        </div>
        <div class="license-text">
            <span class="license-label">MIT License</span>
            <span class="license-separator">-</span>
            <span class="copyright-text">Â© 2025 The Medusa Project | Roylepython | D Hargreaves</span>
        </div>
    </div>
</div>

@style {
    .enterprise-footer {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.95) 0%, rgba(139, 63, 139, 0.1) 100%);
        backdrop-filter: blur(25px);
        border-top: 3px solid var(--glass-border-strong);
        box-shadow: 0 -8px 32px rgba(0, 0, 0, 0.3);
        margin-top: 3rem;
        padding: 3rem 0 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .enterprise-footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, 
            transparent, 
            var(--primary-purple), 
            var(--gif3d-pink), 
            var(--yorkshire-gold), 
            transparent);
        animation: footerShimmer 4s ease-in-out infinite;
    }
    
    @keyframes footerShimmer {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 1; }
    }
    
    /* UNIVERSAL FOOTER STYLES */
    .universal-footer {
        background: rgba(0, 0, 0, 0.98);
        backdrop-filter: blur(30px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1.5rem 0;
        margin-top: 2rem;
    }

    .universal-footer-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    /* COPYRIGHT GIF3D SYMBOL */
    .copyright-gif3d {
        position: relative;
        width: 40px;
        height: 40px;
    }

    .copyright-symbol {
        position: relative;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        animation: copyrightRotate 8s linear infinite;
    }

    .copyright-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 30px;
        height: 30px;
        border: 2px solid var(--warning-orange);
        border-radius: 50%;
        animation: copyrightRingPulse 2s ease-in-out infinite;
    }

    .copyright-core {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 15px;
        height: 15px;
        background: var(--primary-purple);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--primary-purple);
        animation: copyrightCorePulse 1.5s ease-in-out infinite;
    }

    .copyright-particles {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .copyright-particles .particle {
        position: absolute;
        width: 3px;
        height: 3px;
        background: var(--gif3d-pink);
        border-radius: 50%;
        animation: copyrightParticleFloat 4s ease-in-out infinite;
    }

    .copyright-particles .particle:nth-child(1) { top: 0; left: 50%; animation-delay: 0s; }
    .copyright-particles .particle:nth-child(2) { top: 50%; right: 0; animation-delay: 1s; }
    .copyright-particles .particle:nth-child(3) { bottom: 0; left: 50%; animation-delay: 2s; }
    .copyright-particles .particle:nth-child(4) { top: 50%; left: 0; animation-delay: 3s; }

    /* LICENSE TEXT */
    .license-text {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-primary);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .license-label {
        color: var(--success-green);
        font-weight: 600;
    }

    .license-separator {
        color: var(--gif3d-pink);
        animation: separatorBlink 2s ease-in-out infinite;
    }

    .copyright-text {
        color: rgba(255, 255, 255, 0.9);
    }

    /* UNIVERSAL FOOTER ANIMATIONS */
    @keyframes copyrightRotate {
        0% { transform: rotateY(0deg) rotateZ(0deg); }
        100% { transform: rotateY(360deg) rotateZ(360deg); }
    }

    @keyframes copyrightRingPulse {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1);
            box-shadow: 0 0 5px var(--warning-orange);
        }
        50% { 
            transform: translate(-50%, -50%) scale(1.1);
            box-shadow: 0 0 15px var(--warning-orange);
        }
    }

    @keyframes copyrightCorePulse {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1);
            box-shadow: 0 0 10px var(--primary-purple);
        }
        50% { 
            transform: translate(-50%, -50%) scale(1.2);
            box-shadow: 0 0 20px var(--primary-purple);
        }
    }

    @keyframes copyrightParticleFloat {
        0%, 100% { 
            transform: translateY(0px) scale(1);
            opacity: 0.7;
        }
        50% { 
            transform: translateY(-10px) scale(1.5);
            opacity: 1;
        }
    }
    
    @keyframes separatorBlink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .footer-section h4 {
        color: var(--primary-purple);
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--glass-border);
        padding-bottom: 0.5rem;
    }

    .status-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    .status-item {
        background: var(--glass-bg-strong);
        border: 2px solid var(--glass-border);
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: all var(--transition-medium);
    }
    
    .status-item:hover {
        transform: translateY(-3px);
        box-shadow: var(--glow-purple);
        border-color: var(--primary-purple);
    }
    
    .status-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--gif3d-pink), transparent);
        animation: statusItemGlow 3s ease-in-out infinite;
    }
    
    @keyframes statusItemGlow {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    .status-label {
        display: block;
        font-size: 0.7rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
    }

    .status-value {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    .quick-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.75rem;
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 8px;
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .quick-btn:hover {
        background: var(--primary-purple);
        transform: translateY(-2px);
        box-shadow: var(--shadow-depth);
    }

    .quick-btn i {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .quick-btn span {
        font-size: 0.8rem;
    }

    .activity-feed {
        max-height: 200px;
        overflow-y: auto;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem;
        border-bottom: 1px solid var(--glass-border);
        transition: background 0.3s ease;
    }

    .activity-item:hover {
        background: var(--glass-bg);
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .activity-icon.success {
        background: rgba(76, 175, 80, 0.2);
        color: var(--success-green);
    }

    .activity-icon.warning {
        background: rgba(255, 152, 0, 0.2);
        color: var(--warning-orange);
    }

    .activity-icon.info {
        background: rgba(33, 150, 243, 0.2);
        color: var(--medusa-blue);
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        display: block;
        font-size: 0.9rem;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .activity-time {
        font-size: 0.7rem;
        color: var(--text-secondary);
    }

    .support-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .support-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        color: var(--text-primary);
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .support-link:hover {
        background: var(--glass-bg);
        border-color: var(--glass-border);
        transform: translateX(5px);
    }

    .support-link i {
        width: 16px;
        text-align: center;
    }

    .footer-bottom {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1400px;
        margin: 2rem auto 0;
        padding: 1rem 2rem 0;
        border-top: 1px solid var(--glass-border);
        flex-wrap: wrap;
        gap: 1rem;
    }

    .footer-stats {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .footer-stats span {
        font-size: 0.8rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .text-success {
        color: var(--success-green) !important;
    }

    .footer-actions {
        display: flex;
        gap: 0.5rem;
    }

    .footer-btn {
        width: 36px;
        height: 36px;
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 8px;
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .footer-btn:hover {
        background: var(--primary-purple);
        transform: translateY(-2px);
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .footer-bottom {
            flex-direction: column;
            text-align: center;
        }

        .footer-stats {
            justify-content: center;
        }
    }
}